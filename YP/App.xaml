<Application x:Class="YP.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:YP"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Bahnschrift Light"></Setter>
            <Setter Property="FontSize" Value="22"></Setter>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Width" Value="100"/>
            <Setter Property="Margin" Value="0,0,20,10"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FontFamily" Value="Bahnschrift Light"></Setter>
            <Setter Property="Margin" Value="10,0,10,10"/>
            <Setter Property="FontSize" Value="22"></Setter>
            <Setter Property="Height" Value="30"/>
        </Style>
        <Style x:Key="Button_style" TargetType="Button">
            <Setter Property="Background" Value="#B5DEFA"></Setter>
            <Setter Property="Margin" Value="10,0,10,10"/>
        </Style>
        <Style x:Key="text_time"  TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Bahnschrift Light"></Setter>
            <Setter Property="Foreground" Value="#4A67F7"></Setter>
            <Setter Property="FontSize" Value="18"></Setter>
        </Style>
    </Application.Resources>
</Application>
